@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
	Layout = null;
	var options = @Umbraco.Content(1053);
}

<!DOCTYPE html>
<html>
	<head>
		@if (CurrentPage.HasValue("seoTitle"))
        {
            <title>@Umbraco.Field("seoTitle") | @options.GetPropertyValue("siteTitle")</title>}
        else
        {
            <title>@options.GetPropertyValue("siteTitle")</title>
        }
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width,initial-scale=1">
		<meta name="description" content="@Umbraco.Field("seoMetaDescription")">
		<meta name="keywords" content="@Umbraco.Field("seoMetaKeywords")">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
		<link rel="stylesheet" href="~/css/style.css" />
		<link rel="stylesheet" href="~/css/rte.css" />
	</head>
	<body>
		<div class="container">
			<header class="clearfix">
				<div class="logo">
					<h1><a href="/">@options.GetPropertyValue("siteTitle")</a></h1>
				</div>
				<nav>
					@Umbraco.RenderMacro("mainNavigation")
                </nav>
			</header>
			<main>
					@if (CurrentPage.breadcrumbEnabled) {
						@Umbraco.RenderMacro("breadcrumb")
					}
				
				<div class="content">
					@RenderBody()
				</div>
			</main>
			<footer class="clearfix">
				<span>&copy; @(DateTime.Now.Year.ToString()) @options.GetPropertyValue("siteFooter")</span>
			</footer>
		</div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
		<script src="~/scripts/index.js"></script>
	</body>
</html>
